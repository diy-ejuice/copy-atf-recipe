{
  "background": {
    "persistent": false,
    "scripts": ["src/js/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "default_locale": "en",
  "description": "Copy an All The Flavors recipe to Markdown",
  "homepage_url": "https://alltheflavors.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "name": "Copy ATF Recipe",
  "permissions": ["clipboardWrite", "https://alltheflavors.com/*"],
  "version": "0.1.1"
}
